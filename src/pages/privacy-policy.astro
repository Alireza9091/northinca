---
import BaseLayout from '../layouts/BaseLayout.astro';
import { privacyPolicySections } from '../data/privacyPolicy';
---

<BaseLayout title="Privacy Policy">
  <div class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold text-[#233a6c] mb-12 text-center">Privacy Policy</h1>
      
      <div class="space-y-12">
        {privacyPolicySections.map((section) => (
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{section.title}</h2>
            <div class="prose prose-lg text-gray-600 leading-relaxed whitespace-pre-wrap font-sans">
              {section.content}
            </div>
          </section>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

