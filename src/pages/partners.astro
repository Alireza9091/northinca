---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import { FadeIn } from '../components/react/AboutComponents';
import { partners } from '../data/partners';
---

<BaseLayout title="Partners">
  <div class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading title="Our Partners" subtitle="Collaborating for global success" center />
      
      <div class="mt-20 space-y-48">
        {partners.map((partner, index) => (
          <FadeIn client:visible delay={index * 0.1}>
            <div class={`flex flex-col lg:flex-row gap-16 lg:gap-24 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              
              {/* Image Section */}
              <div class="w-full lg:w-5/12">
                <div class="relative rounded-3xl overflow-hidden shadow-2xl group">
                    <div class="absolute inset-0 bg-blue-900/10 group-hover:bg-transparent transition-colors duration-500"></div>
                    <img 
                      src={partner.image} 
                      alt={partner.name} 
                      class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700"
                    />
                </div>
              </div>

              {/* Content Section */}
              <div class="w-full lg:w-7/12">
                <h3 class="text-3xl font-bold text-[#233a6c] mb-6">{partner.name}</h3>
                <div class="prose prose-lg text-gray-600 leading-relaxed">
                  <p>{partner.description}</p>
                </div>
                {partner.website && partner.website !== '#' && (
                    <a href={partner.website} class="inline-flex items-center mt-8 text-[#233a6c] font-semibold hover:text-blue-700 transition-colors">
                        Visit Website
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                )}
              </div>

            </div>
          </FadeIn>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
