---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import FeatureCard from '../components/FeatureCard.astro';
import { WorldMap } from '../components/react/WorldMap';
import { keyServices, serviceScopes } from '../data/services';

const mapDots = [
  { start: { lat: 43.65, lng: -79.38 }, end: { lat: 51.50, lng: -0.12 } }, // Toronto -> London
  { start: { lat: 43.65, lng: -79.38 }, end: { lat: 35.67, lng: 139.65 } }, // Toronto -> Tokyo
  { start: { lat: 43.65, lng: -79.38 }, end: { lat: 25.20, lng: 55.27 } }, // Toronto -> Dubai
  { start: { lat: 43.65, lng: -79.38 }, end: { lat: -33.86, lng: 151.20 } }, // Toronto -> Sydney
  { start: { lat: 43.65, lng: -79.38 }, end: { lat: 48.85, lng: 2.35 } }, // Toronto -> Paris
];
---

<BaseLayout title="Services">
  <div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Hero Map -->
      <div class="mb-20">
        <div class="text-center mb-10">
           <h1 class="text-4xl md:text-5xl font-bold text-[#233a6c] mb-6">Global Distribution Network</h1>
           <p class="text-xl text-gray-600 max-w-3xl mx-auto">Connecting Canada to the world with our extensive logistics and supply chain solutions.</p>
        </div>
        <WorldMap client:visible dots={mapDots} lineColor="#233a6c" />
      </div>

      <!-- Key Services -->
      <div class="mb-24">
        <SectionHeading title="Key Services" center />
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {keyServices.map(service => (
            <FeatureCard 
              title={service.title} 
              description={service.description} 
              icon={service.icon} 
            />
          ))}
        </div>
      </div>

      <!-- Scope of Services -->
      <div>
        <SectionHeading title="Scope of Services" center />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          {serviceScopes.map(scope => (
            <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100">
              <h3 class="text-2xl font-bold text-[var(--color-primary)] mb-6 border-b border-gray-200 pb-2">
                {scope.category}
              </h3>
              <ul class="space-y-3">
                {scope.items.map(item => (
                  <li class="flex items-center text-gray-700">
                    <span class="mr-3 text-green-500">âœ“</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>
</BaseLayout>
