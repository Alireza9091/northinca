---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import { InfoCard, ValueCard, TeamCard, FadeIn } from '../components/react/AboutComponents';
import { mission, vision, values, csr, team } from '../data/about';

---

<BaseLayout title="About Us" description="Learn about Northinca's mission, vision, and team.">
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-24">
      <div class="text-center mb-16">
        <SectionHeading title="About Northinca" subtitle="Our Story & Philosophy" center />
      </div>
    
    <!-- Mission & Vision -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <InfoCard client:visible title="Our Mission" content={mission} delay={0.1} />
      <InfoCard client:visible title="Our Vision" content={vision} delay={0.2} />
    </div>

    <!-- Values -->
    <div>
      <SectionHeading title="Our Values" center />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">
        {values.map((value, index) => (
          <ValueCard 
            client:visible 
            title={value.title} 
            content={value.content} 
            delay={index * 0.1} 
          />
        ))}
      </div>
    </div>

    <!-- CSR -->
    <FadeIn client:visible className="bg-gray-50 p-10 rounded-3xl border border-gray-200 mt-20">
       <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-gray-900">Corporate Social Responsibility</h2>
          <div class="w-16 h-1 bg-[var(--color-primary)] mx-auto mt-4 rounded-full"></div>
       </div>
       <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">
          {csr.map((item) => (
            <div class="group">
              <h4 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[var(--color-primary)] transition-colors">{item.title}</h4>
              <p class="text-gray-700 leading-relaxed">{item.description}</p>
            </div>
          ))}
       </div>
    </FadeIn>

    <!-- Leadership Team -->
    <div class="mt-20">
      <SectionHeading title="Leadership Team" center />
      <p class="text-center text-gray-600 max-w-2xl mx-auto mb-20 -mt-8">
        Our experienced team is dedicated to expanding your health and beauty market in Canada through expert distribution.
      </p>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 gap-y-16">
        {team.map((member, index) => (
          <TeamCard
            client:visible
            name={member.name}
            role={member.role}
            image={member.image}
            bio={member.bio}
            delay={index * 0.1}
          />
        ))}
      </div>
    </div>

  </div>
</BaseLayout>
