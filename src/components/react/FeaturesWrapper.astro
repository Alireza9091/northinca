---
import { features } from '../../data/home'; // Adjust path if needed, this file will be imported in index.astro
import { SpotlightCard } from './SpotlightCard';

// This is a wrapper to use in .astro file
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  {features.map((feature, index) => (
    <SpotlightCard client:load className="bg-white border-gray-100 shadow-sm" spotlightColor="rgba(35, 58, 172, 0.15)">
      <div class="relative z-10 h-full flex flex-col">
        <div class="mb-6">
          {index === 0 ? (
            <svg class="w-12 h-12 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          ) : (
            <svg class="w-12 h-12 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          )}
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-3 tracking-tight">{feature.title}</h3>
        <p class="text-gray-600 leading-relaxed flex-grow">
          {feature.content}
        </p>
      </div>
    </SpotlightCard>
  ))}
</div>
